<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    tools:context=".BookGuide">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="START TOUR:"
            android:textColor="@color/colorAccent"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_tour_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="12 july 2019"
            android:textColor="@color/black"
            android:textSize="50px"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="END TOUR:"
            android:textColor="@color/colorAccent"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_tour_date"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="15 july 2019"
            android:textColor="@color/black"
            android:textSize="50px"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="TOURIST CAPACITY:"
            android:textColor="@color/colorAccent"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tourist_capacity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="50px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="TOUR BUDGET:"
            android:textColor="@color/colorAccent"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tour_budget"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="4000 Taka"
            android:textColor="@color/black"
            android:textSize="50px" />

    </LinearLayout>

    <EditText
        android:id="@+id/guideBook_message"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/textview_borfer"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/purple"
        android:hint="Short Message"
        android:gravity="center"
        android:textSize="40px"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/guideBook_submit_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@drawable/round_button"/>

</LinearLayout>